
{{#partial "content"}}


    <body style="background-image: url('/images/bg1.jpeg');background-repeat: no-repeat;
    background-size: cover;">
<h1 class="h1 text-center text-success">Animals</h1>
<form action="/animalDetails">
    <div class="mb-3">
        <label for="id" class="form-label">ID number</label>
        <input name="id" type="id" class="form-control" id="id" >

    </div>
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input name="name" type="text" class="form-control" id="name">
    </div>
    <div class="mb-3">
        <label for="age" class="form-label">Age</label>
        <input  name="age" type="number" class="form-control" id="age">
    </div>
    <div class="mb-3">
        <label for="healthStatus" class="form-label">Health status</label>
        <select name="healthStatus" type="text" class="form-control" id="healthStatus">
            <option>Healthy</option>
            <option>sick</option>
        </select>
    </div>
    <div class="mb-3">
        <label for="animalCategory" class="form-label">Animal Category</label>
        <select name="animalCategory" type="text" class="form-control" id="animalCategory">
            <option>wild Animal</option>
            <option>domestic/tame </option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

    </body>

    </html>
{{/partial}}
{{> layout.hbs}}